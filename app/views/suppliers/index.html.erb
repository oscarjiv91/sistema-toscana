<div class="page-header">
  <h1>Lista de proveedores</h1>
</div>

<%= link_to 'Nuevo proveedor', new_supplier_path, :class => "btn btn-primary pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.direction %></td>
        <td><%= supplier.phone %></td>
        <td><%= link_to 'Más...', supplier %></td>
        <td><%= link_to 'Editar', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Eliminar', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


