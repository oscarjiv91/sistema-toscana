<div class="page-header">
	<h2>Detalles de la factura <%= @supplier_bill_head.number %></h2>
</div>

<p><strong>Proveedor: </strong> <%= Supplier.find(@supplier_bill_head.supplier_id).name %></p>
<p><strong>Total:</strong> <%=number_with_delimiter(number_with_precision(@supplier_bill_head.total, precision: 0), delimiter: ".") %> </p>
<p><strong>Tipo: </strong> <%= @supplier_bill_head.type %> </p>

<% if !@records.empty? %>
<div style="padding-top: 5%">
	<table class="table table-bordered">
			<thead>
		    <tr>
		      <th>Cant.</th>
		      <th>Producto</th>
		      <th>Precio unit.</th>
		      <th>Total prod.</th>
		    </tr>
			</thead>
			<tbody>
				<% @records.each do |r| %>
			      <tr>
			        <td><%= r.quantity %></td>
			        <td><%= Product.find(r.product_id).name %> <%= Product.find(r.product_id).cod %></td>
			        <td><%= number_with_delimiter(r.price, delimiter: ".") %></td>
			        <td><%= number_with_delimiter(r.price*r.quantity, delimiter: ".") %></td>
			      </tr>
			    <% end %>
		</tbody>
	</table>
</div>
<% end %>

