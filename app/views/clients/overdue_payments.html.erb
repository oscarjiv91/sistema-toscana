<div class="page-header">
  <h2>Clientes en mora</h2>
</div>

<table class="table table-hover">
  <thead>
    <tr>      
      <th>Nro. de Documento</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Obs.</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |c| %>
      <tr>
      	<td><%= number_with_delimiter(c.cod, :delimiter => ".") %></td>
        <td><%= c.last_name %></td>
        <td><%= c.name%></td>  
        <td><%= c.obs%></td>     
        <td><%= link_to 'Ver', "/clients/#{c.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>